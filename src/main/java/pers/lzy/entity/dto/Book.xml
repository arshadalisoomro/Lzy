<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="free.lzy.dao.BookDao">

	<insert id="add" parameterType="free.lzy.entity.dto.Book">
		INSERT INTO book (
			id, name, author, price
		) VALUES (
			#{id}, #{name}, #{author}, #{price}
		)
	</insert>
	
	<insert id="addBatch" parameterType="java.util.List">
		INSERT INTO book (
			id, name, author, price
		) VALUES 
			<foreach collection="list" item="item" separator="," >  
				(
					#{item.id}, #{item.name}, #{item.author}, #{item.price}
				)
			</foreach>
	</insert>

	<delete id="delete" parameterType="int">
		DELETE 
		FROM book 
		WHERE id= #{id}
	</delete>
	
	<update id="update" parameterType="free.lzy.entity.dto.Book">
		UPDATE book
		<set>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="author != null">
				author = #{author},
			</if>
			<if test="price != null">
				price = #{price},
			</if>
		</set>
		WHERE id= #{id}
	</update>

	<select id="query" parameterType="int" resultType="free.lzy.entity.dto.Book">
		SELECT * 
		FROM book 
		WHERE id= #{id}
	</select>

	<select id="queryMatch" parameterType="free.lzy.entity.dto.Book" resultType="free.lzy.entity.dto.Book">
		SELECT * 
		FROM book 
		WHERE 1 = 1 
			<if test="id != null">
				and id = #{id}
			</if>
			<if test="name != null">
				and name = #{name}
			</if>
			<if test="author != null">
				and author = #{author}
			</if>
			<if test="price != null">
				and price = #{price}
			</if>
	</select>

	<select id="queryAll" resultType="free.lzy.entity.dto.Book">
		SELECT * 
		FROM book 
	</select>
</mapper> 